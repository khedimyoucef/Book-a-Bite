<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".profileFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="415dp"
        android:layout_height="257dp"
        android:background="@drawable/pink_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="349dp"
            android:layout_height="160dp"
            android:padding="12dp"
            android:paddingStart="110dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingStart="130dp"
            android:text="Mohamed ahmed"
            android:textColor="@color/darkpink"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/data"
        android:layout_width="270dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/account"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="text"
        android:padding="25dp"
        android:text="Your Data"
        android:textColor="@color/darkpink"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/contactUs"
        android:layout_width="270dp"
        android:layout_height="74dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/contact_us"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="text"
        android:padding="25dp"
        android:text="Contact Us!"
        android:textColor="@color/darkpink"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/data"
        app:layout_constraintStart_toStartOf="@+id/data"
        app:layout_constraintTop_toBottomOf="@+id/data" />

    <TextView
        android:id="@+id/RateTheApp"
        android:layout_width="270dp"
        android:layout_height="71dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/favorite"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="text"
        android:padding="25dp"
        android:text="Rate the app"
        android:textColor="@color/darkpink"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/contactUs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contactUs"
        app:layout_constraintTop_toBottomOf="@+id/contactUs" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LogOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:background="@drawable/buttonbg"
        android:text="Log out"
        android:textColor="@color/beige"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/RateTheApp"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/RateTheApp"
        app:layout_constraintTop_toBottomOf="@+id/RateTheApp"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>