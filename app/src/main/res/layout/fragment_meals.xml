<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mealsFragment"
    android:background="@drawable/bg"
    >
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat1btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="10dp"

            android:background="@drawable/buttonbg"
            android:text="meditaranean"
            android:textColor="@color/beige"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat2btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/buttonbg"
            android:layout_margin="5dp"
            android:text="Seafood"
            android:textColor="@color/beige"
            android:textSize="18dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat3btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:text="Sandwiches"
            android:textColor="@color/beige"
            android:layout_margin="5dp"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat4btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:text="Burgers"
            android:layout_margin="5dp"
            android:textColor="@color/beige"
            android:textSize="18dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat5btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:text="Pizza"
            android:layout_margin="5dp"
            android:textColor="@color/beige"
            android:textSize="18dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat6btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:text="salads"
            android:layout_margin="5dp"
            android:textColor="@color/beige"
            android:textSize="18dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat7btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:text="Desserts"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/beige"
            android:textSize="18dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat8btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:text="Drinks"
            android:layout_margin="5dp"
            android:textColor="@color/beige"
            android:textSize="18dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat9btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:text="Gratin"
            android:layout_margin="5dp"
            android:textColor="@color/beige"
            android:textSize="18dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat10btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:text="Pasta"
            android:layout_margin="5dp"
            android:textColor="@color/beige"
            android:textSize="18dp" />

    </LinearLayout>
</HorizontalScrollView>


    <androidx.appcompat.widget.AppCompatButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbg"
        android:padding="10dp"
        android:text="Book Now"
        android:id="@+id/bookNowbtn"
       android:layout_marginTop="300dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/beige"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealsRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            tools:listitem="@layout/menu_item" />
    </LinearLayout>

</FrameLayout>